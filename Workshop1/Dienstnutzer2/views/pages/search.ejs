<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    
    <script type="text/javascript">
    $(document).ready(function() {
        $("#form").submit(function(event) {
            
            $.ajaxSetup({
                contentType: "application/json; charset=utf-8"
            });
            $.ajax({
				type: 'GET',
                host: 'localhost',
                port: 8080,
				url: '/search1',
                data: { id: 'val1',
                        name: 'val2',
                        stadt: 'val3',
                        offen: 'val4',
                        sitzplaetze: 'val5',
                        asp: 'val6' },
                dataType: 'json',
                success: function(data){
                    $.each(data, function(index, element) {
                        if(element.stadt == $("#search").val() || element.name == $("#search").val() || element.offen == $("#search").val()){
                            $('#results').append("<h3>" + element.name.toString() + "</h3><br/> ID: " + element.id.toString()+ "<br/>Stadt: " + element.stadt.toString()+ "<br/>Geöffnet: " + element.offen.toString() + "<br/> Sitzplätze: " + element.sitzplaetze.toString() + "<br/>Aktuelle Sitzplätze: " + element.asp.toString());
                        }
                    });
                }
				}).done(function(data){
                    alert("Passt");
                    
				}).fail(function(e){
				    alert("fehler");
				});
				event.preventDefault();
            });
            
        });
        
    
    </script>
</head>
<body class="container">


	<header>
		<% include ../partials/header %>
	</header>


  <main>
        <div class="jumbotron">
          <h1>Kneipentour</h1>
					<form id='form'>
						<br><br><br>Bar suchen: <input type='text' id='search' name='bar'>
						<input type='submit' value='Suche'>
					</form>
    		</div>
        <div id="results"></div>
    </main>

    <footer>
      <% include ../partials/footer %>
    </footer>

</body>
</html>
